
@{
  Layout = "_Layout";
}

<div class="container">
<h1>AddressBook</h1>

@if (@Model.Count == 0)
{
<p>Please enter a contact</p>
}

<ul>
  @foreach (var contact in Model)
  {
    <li><a href="/contacts/@contact.GetId()">@contact.GetName()</a></li>
  }
</ul>



<a href='/contacts/new'>Add a new Contact</a>



</div>
